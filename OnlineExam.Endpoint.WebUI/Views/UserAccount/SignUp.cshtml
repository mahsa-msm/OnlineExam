@model OnlineExam.Endpoint.WebUI.Models.UserApp.CreateUserViewModel
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="~/vendor/bootstrap.css">
<link rel="stylesheet" href="~/css/style.css">

@{
    ViewData["Title"] = "ثبت نام ";
    Layout = null;

}


<div class="login-box">
    <div class="login-title">
        <i class="fa fa-user-plus  login-icon" ></i>
    </div>
    <hr />
    <div class="login-form">
        <form asp-action="SignUp" method="post">
            <div class="form-group">
                <label asp-for="Name" class="login-lable"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="login-lable"></label>
                <input type="email" asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="login-lable"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn bg-bluecolor btn-block"> ثبت نام</button>
            </div>
        </form>
    </div>

</div>


