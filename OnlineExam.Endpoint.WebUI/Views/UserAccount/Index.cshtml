@{
    ViewData["Title"] = "صفحه ی اصلی ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




@if (User.IsInRole("admin"))
{
    <div class="container">
        <div class="row">
            <div class="col-sm-4">
                <div class="mainpage-counter-box">
                    <span class="mainpage-counter-title">
                        تعداد کل ازمون های داده شده :
                    </span>
                    <span id="ExamCounts">

                    </span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="mainpage-counter-box">
                    <span class="mainpage-counter-title">
                        تعداد کاربران :
                    </span>
                    <span id="UserCounts">

                    </span>
                </div>
            </div>
            <div class="col-sm-4">
                <div class="mainpage-counter-box">
                    <span class="mainpage-counter-title">
                        تعداد ادمین ها  :
                    </span>
                    <span id="AdminCounts">

                    </span>
                </div>
            </div>
        </div>
        <hr />
        <div class=" p-3 justify-content-center align-items-center">
            <div class="main-title m-2">  ادمین های سایت </div>

            <table id="adminsDataTable" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>نام </th>
                        <th>ایمیل</th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

}
else
{

    <div>
        <a asp-controller="Course" asp-action="Index">لیست درس ها </a>
    </div>
}

