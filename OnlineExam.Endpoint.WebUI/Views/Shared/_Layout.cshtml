                        <a asp-controller="UserAccount" asp-action="Logout">خروج</a>
                    </li>
                </ul>
            }

        </nav>
    </header>


    <div id="main">
        @RenderBody()
    </div>



    <script type="text/javascript" src="https://code.jquery.com/jquery-3.3.1.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-sweetalert/1.0.1/sweetalert.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.21/js/dataTables.bootstrap4.min.js"></script>



    <script src="https://unpkg.com/persian-date@1.1.0/dist/persian-date.min.js"></script>
    <script src="https://unpkg.com/persian-datepicker@1.2.0/dist/js/persian-datepicker.js"></script>


    <script src="~/js/scripts.js"></script>

    <script type="text/javascript">

        var to, from;
        to = $(".range-to-example").persianDatepicker({
            "inline": false,
            "viewMode": "day",
            "initialValue": true,
            "position": "auto",
            "onlySelectOnDate": false,
            "format": "L",
            "autoClose": true,
            "calendar": {
                "persian": {
                    "locale": "faen",
                    "showHint": false,
                    "leapYearMode": "algorithmic"
                },
                "gregorian": {
                    "locale": "en",
                    "showHint": true
                }
            },
            "navigator": {
                "enabled": true,
                "scroll": {
                    "enabled": false
                },
            },
            "toolbox": {
                "enabled": true,
                "calendarSwitch": {
                    "enabled": false,
                },
                "submitButton": {
                    "enabled": false,
                    "text": {
                        "fa": "تایید"
                    }
                },
                "text": {
                    "btnToday": "امروز"
                }
            },
            "timePicker": {
                "enabled": false,
                "second": {
                    "enabled": false
                },
                "meridian": {
                    "enabled": false
                }
            },
            "initialValue": false,
            "responsive": true,
            onSelect: function (unix) {
                to.touched = true;
                if (from && from.options && from.options.maxDate != unix) {
                    var cachedValue = from.getState().selected.unixDate;
                    from.options = { maxDate: unix };
                    if (from.touched) {
                        from.setDate(cachedValue);
                    }
                }
            }
        });
        from = $(".range-from-example").persianDatepicker({
            "inline": false,
            "viewMode": "day",
            "initialValue": true,
            "position": "auto",
            "onlySelectOnDate": false,
            "format": "L",
            "autoClose": true,
            "calendar": {
                "persian": {
                    "locale": "faen",
                    "showHint": false,
                    "leapYearMode": "algorithmic"
                },
                "gregorian": {
                    "locale": "en",
                    "showHint": true
                }
            },
            "navigator": {
                "enabled": true,
                "scroll": {
                    "enabled": false
                },
            },
            "toolbox": {
                "enabled": true,
                "calendarSwitch": {
                    "enabled": false,
                },
                "submitButton": {
                    "enabled": false,
                    "text": {
                        "fa": "تایید"
                    }
                },
                "text": {
                    "btnToday": "امروز"
                }
            },
            "timePicker": {
                "enabled": false,
                "second": {
                    "enabled": false
                },
                "meridian": {
                    "enabled": false
                }
            },
            "initialValue": false,
            "responsive": true,
            onSelect: function (unix) {
                from.touched = true;
                if (to && to.options && to.options.minDate != unix) {
                    var cachedValue = to.getState().selected.unixDate;
                    to.options = { minDate: unix };
                    if (to.touched) {
                        to.setDate(cachedValue);
                    }
                }
            }
        });




        $(".ExamDatePicker").persianDatepicker({
            "inline": false,
            "viewMode": "day",
            "initialValue": true,
            "position": "auto",
            "onlySelectOnDate": false,
            "format": "L",
            "autoClose": true,
            "calendar": {
                "persian": {
                    "locale": "faen",
                    "showHint": false,
                    "leapYearMode": "algorithmic"
                },
                "gregorian": {
                    "locale": "en",
                    "showHint": true
                }
            },
            "navigator": {
                "enabled": true,
                "scroll": {
                    "enabled": false
                },
            },
            "toolbox": {
                "enabled": true,
                "calendarSwitch": {
                    "enabled": false,
                },
                "submitButton": {
                    "enabled": false,
                    "text": {
                        "fa": "تایید"
                    }
                },
                "text": {
                    "btnToday": "امروز"
                }
            },
            "timePicker": {
                "enabled": false,
                "second": {
                    "enabled": false
                },
                "meridian": {
                    "enabled": false
                }
            },
            "initialValue": false,
            "responsive": true,
        })



    </script>
</body>
</html>
