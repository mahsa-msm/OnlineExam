                    <li>
                        <a asp-controller="TakeExam" asp-action="ExamResults">لیست نتایج آزمون  </a>
                    </li>
                    <li>
                        <a asp-controller="Course" asp-action="Index">لیست درس ها </a>
                    </li>
                    <li>
                        <a asp-controller="Course" asp-action="Index">لیست درس ها </a>
