<div class="row  d-flex justify-content-center align-items-center ">
    <div class="col-md-10  p-3">
        <table id="grid" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
            <thead>
                <tr>
                    <th>نام کاربر</th>
                    <th>نام آزمون</th>
                    <th>نام درس</th>
                    <th>امتیاز</th>
                    <th>تاریخ </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
</div>




<script src="https://code.jquery.com/jquery-3.5.1.js"></script>
