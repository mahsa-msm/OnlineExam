<script>
    $(document).ready(function () {

        dataTable = $('#grid').DataTable({
            "ajax": {
                "url": "/TakeExam/AllExamResultsForAdminDataTable",
                "type": 'GET',
                "datatype": 'json'
            },
            //"stateSave": "true",
            "columns": [
                { "data": "userName" },
                { "data": "examName" },
                { "data": "courseName" },
                { "data": "score" },
                { "data": "dateTime" }
            ],
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Persian.json"
            },
            "lengthChange": true,
            //"aLengthMenu": [[10, 25, 50, 100], [10, 25, 50, 100]],
            autoWidth: true
        });
    });

</script>
