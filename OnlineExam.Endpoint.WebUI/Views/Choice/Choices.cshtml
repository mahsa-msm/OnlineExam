@model OnlineExam.Endpoint.WebUI.Models.ChoiceViewModel

@{
    ViewData["Title"] = "Choices";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Choices</h1>

<h4>ChoiceViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Choices">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @for (int i = 0; i < 4; i++)
            {
                <div class=" form-group">
                    <input asp-for="Choices[i].Text" />
                </div>
            }

            <div class=" form-group">
                <input asp-for="Choices[1].Text" />
            </div>
            <div class=" form-group">
                <input asp-for="Choices[2].Text" />
            </div>
            <div class=" form-group">
                <input id="addbutton" type="button" value="add" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

   
<div>
    <a asp-action="Index">Back to List</a>
</div>

