@model IEnumerable<OnlineExam.Domain.Core.Courses.Course>

@{
    ViewData["Title"] = "لیست دروس";
    Layout = "~/Views/Shared/_Layout.cshtml";
}





@if (User.IsInRole("admin"))
{
    <div class="container">
        <a asp-action="Create" class="btn main-btn"><i class="fa fa-plus" aria-hidden="true"> </i>  ایجاد درس جدید</a>
    </div>
    <hr style=" border-top: 1px solid white" />
    <div class="row  d-flex justify-content-center align-items-center ">
        <div class="col-md-10  p-3 text-justify">
            <table id="allCourseDataTableForAdmin" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>نام درس</th>
                        <th>توضیحات</th>
                        <th>آزمون</th>
                        <th>بلاگ</th>
                        <th></th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row  d-flex justify-content-center align-items-center ">
        <div class="col-md-10  p-3 text-justify">
            <h1 class="main-title">لیست دروس</h1>
            <hr />
            <table id="allCourseDataTableForUsers" class="table table-striped table-bordered dt-responsive nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>نام درس</th>
                        <th>توضحیات </th>
                        <th>تاریخ پایان</th>

                    </tr>
                </thead>
                <tbody></tbody>
            </table>
        </div>
    </div>

}


